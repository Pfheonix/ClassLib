<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dystahl.classlib.MainMenu">

    <Button
        android:id="@+id/button4"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Find Books"
        android:layout_marginBottom="76dp"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:onClick="changeToFindBooks"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Add Books"
        android:layout_marginTop="216dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="changeToAddBook"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Check Out Books"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:onClick="changeToCheckOut"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Checked Out Books"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true"
        android:onClick="changeToCheckedOut"/>
</RelativeLayout>
